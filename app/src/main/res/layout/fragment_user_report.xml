<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/report_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/segnala"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            tools:ignore="ExtraText" />

        <com.example.firsttry.extensions.ValidatedEditText
            android:id="@+id/report_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/testo_segnalazione"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:lines="5"
            android:scrollbars="vertical"
            android:padding="16dp"
            android:maxLength="255" />

        <Button
            android:id="@+id/btn_report_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/invia_segnalazione"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#BD0000" />

    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profilo_utente"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"/>

        <TextView
            android:id="@+id/username_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="24sp"
            android:paddingBottom="16dp"/>

        <TextView
            android:id="@+id/email_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="24sp"
            android:paddingBottom="16dp"/>

        <Spinner
            android:id="@+id/roles_view_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_save_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/salva_profilo"
            android:padding="8dp"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btn_suspend_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sospendi"
            android:padding="8dp"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btn_bandit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bandisci"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#BD0000" />

        <TextView
            android:id="@+id/reports_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/segnalazioni"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"
            android:layout_marginTop="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reportsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</ScrollView>